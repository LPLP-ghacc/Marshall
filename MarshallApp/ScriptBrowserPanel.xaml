<UserControl x:Class="MarshallApp.ScriptBrowserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Browser" Foreground="White" FontWeight="Bold" Margin="10" FontSize="14"/>
        <ListBox x:Name="ScriptList"
                 Grid.Row="1"
                 Background="#333"
                 Foreground="White"
                 Margin="5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.Resources>
                <Style TargetType="ScrollViewer" BasedOn="{StaticResource DarkScrollViewerStyle}"/>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarVertical}"/>
            </ListBox.Resources>
        </ListBox>
    </Grid>
</UserControl>