<UserControl x:Class="MarshallApp.BlockElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" MinWidth="280" MinHeight="60"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             MouseMove="UserControl_MouseMove"
             MouseLeftButtonUp="UserControl_MouseLeftButtonUp" 
             MouseLeave="BlockElement_OnMouseLeave" 
             MouseEnter="BlockElement_OnMouseEnter">
    <Border x:Name="MainBorder" BorderBrush="#666" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Width="20" Height="20" Style="{StaticResource FlatButtonStyle}" Click="CallLogViewer_Click">
                    <Path Width="16" Height="16" Stretch="Uniform" Stroke="#CCFFFFFF" StrokeThickness="1.5" StrokeLineJoin="Round" Fill="Transparent"
                          Data="M2,2 L14,2 L14,14 L2,14 Z
                            M4,4 L12,4
                            M4,7 L12,7
                            M4,10 L12,10
                            M4,13 L8,13"/>
                </Button>
            
                <Button x:Name="Exit" Width="20" Height="20" Margin="1" Style="{StaticResource FlatButtonStyle}" Click="Close_Click">
                    <Path Data="M14.5,13.5 L1.5,0.5 M1.5,13.5 L14.5,0.5" 
                          Stroke="#CCFFFFFF" 
                          StrokeThickness="2.3" 
                          StrokeLineJoin="Round"
                          Stretch="Uniform"
                          Width="14" Height="14"/>
                </Button>
            </StackPanel>

            <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Grid HorizontalAlignment="Left">

                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Image x:Name="ScriptIconImage"/>
                            
                            <TextBlock x:Name="FileNameText"
                                       DockPanel.Dock="Left"
                                       Text=""
                                       VerticalAlignment="Center"
                                       Foreground="Lime"
                                       Margin="5,0,0,0"
                                       FontWeight="Bold" ToolTip=".py filename"/>

                            <Button x:Name="CopyButton"
                                    Style="{StaticResource FlatImageButtonStyle}"
                                    Click="CopyButton_Click" Width="20" Height="20" ToolTip="Copy block output">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resource/Icons/copy.png"/>
                                </Button.Background>
                            </Button>
                            <Button x:Name="LoopToggleButton"
                                    Style="{StaticResource FlatImageButtonStyle}"
                                    Click="ToggleLoop_Click" Width="20" Height="20" ToolTip="Loop settings">
                                <Button.Background>
                                    <ImageBrush x:Name="LoopIconImage" ImageSource="/Resource/Icons/loop.png"/>
                                </Button.Background>
                            </Button>
                            <TextBlock x:Name="PeriodTime" Foreground="Green" />
                            <Button x:Name="InputToggleButton"
                                    Style="{StaticResource FlatImageButtonStyle}"
                                    Click="ToggleInput_Click" Width="20" Height="20" ToolTip="Input field">
                                <Button.Background>
                                    <ImageBrush x:Name="InputIconImage" ImageSource="/Resource/Icons/input.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <Button Style="{StaticResource FlatButtonStyle}" Content="RERUN" FontStyle="Italic" Click="Rerun_Click"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer x:Name="Scroll" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="OutputText"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               FontFamily="Consolas" 
                               PreviewMouseWheel="OutputText_MouseWheel" Loaded="OnOutputLoaded" MouseRightButtonDown="OutputText_OnMouseRightButtonDown"
                               MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
                               MouseMove="UserControl_MouseMove"
                               MouseLeftButtonUp="UserControl_MouseLeftButtonUp" 
                               MouseLeave="BlockElement_OnMouseLeave" 
                               MouseEnter="BlockElement_OnMouseEnter">
                        <TextBlock.ContextMenu>
                            <ContextMenu x:Name="Menu" Style="{StaticResource DarkContextMenuStyle}">
                                <MenuItem Header="Select .py file..." Click="SelectPythonFile_Click"/>
                                <Separator/>
                                <MenuItem Header="Delete block" Click="DeleteButton_Click"/>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </ScrollViewer>
                <TextBlock Grid.Row="0" x:Name="CodeViewer"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Opacity="0.02"
                           FontFamily="Consolas"
                           IsHitTestVisible="False">
                </TextBlock>

                <TextBox x:Name="UserInputBox"
                         Grid.Row="1"
                         Visibility="Collapsed"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         Background="{StaticResource AdditionalBrush2}"
                         FontFamily="Consolas"
                         KeyDown="UserInputBox_KeyDown"
                         Padding="4"
                         Margin="0,2,0,0"
                         BorderBrush="Gray"
                         BorderThickness="1">

                </TextBox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
